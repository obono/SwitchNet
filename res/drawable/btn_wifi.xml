<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="false" android:state_focused="false">
    <shape android:shape="rectangle">
        <gradient
            android:angle="135"
            android:startColor="#008800"
            android:endColor="#88FF88"
            android:type="linear"
            />
        <corners android:radius="16dip" />
        <stroke android:width="4dip" android:color="#004400" />
    </shape>
</item>

<item android:state_pressed="true" android:state_focused="false">
    <shape android:shape="rectangle">
        <gradient
            android:angle="135"
            android:startColor="#88FF88" 
            android:endColor="#008800"
            android:type="linear"
            />
        <corners android:radius="16dip" />
        <stroke android:width="4dip" android:color="#66AA66" />
    </shape>
</item>

</selector>